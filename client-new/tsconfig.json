{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@public/*": ["public/*"],
			"@/*": ["src/*"]
		},
		"jsx": "preserve",
		"noUncheckedIndexedAccess": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"skipLibCheck": true,
		"useUnknownInCatchVariables": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}