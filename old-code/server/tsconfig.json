{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"removeComments": true,
		"noFallthroughCasesInSwitch": true,
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"strictNullChecks": true,
		"lib": ["esnext"]
	}
}
